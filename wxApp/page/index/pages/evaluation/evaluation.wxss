/* page/index/pages/evaluation/evaluation.wxss */
@import "../../../common/index.wxss";
@import "../../../common/lib/weui.wxss";

.kind-list {
  /* padding: 15px 15px 0; */
  margin-bottom: 20rpx;
  background-color: #fff;
}
.master-info {
  display: flex;
  align-items: center;
  height: 50px;
}
.master-info-hd image {
  width: 50px;
  height: 50px;
  border-radius: 50px;
}
.master-info-hd,.master-info-ft {
  display: flex;
  align-items: center;
}
.master-info-bd {
  flex: 1;
  margin: 0 10px;
}
.master-info-ft {
  border-radius: 20px;
  border: 1px solid #ff9500;
  padding: 4px;
}
.master-info-ft image {
  width: 25px;
  height: 25px;
}
.master-info-btn {
  margin: 0;
  font-size: 14px;
  height: 40px;
  width: 110px;
  background-color: #0087FE;
  color: #fff;
  line-height: 40px;
}
.evaluation-box {
  border: 1px solid #eee;
  padding: 6px 10px;
}
.evaluation-btn {
  margin-top: 0;
}
.star-tip {
  font-size: 12px;
  color: #666;
  display: block;
  text-align: center;
  margin-top: 10px;
}