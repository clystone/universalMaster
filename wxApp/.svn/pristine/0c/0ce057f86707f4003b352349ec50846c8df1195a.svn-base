/**index.wxss**/
@import "../common/index.wxss";
.navigator-hover {
  border-radius: 10rpx;
}
.logo-box {
  height: 424rpx;
  text-align: center;
  color: #fff;
  background-color: #0087FE;
}
.logo-image {
  width: 132px;
  height: 88px;
  margin: 20px auto 10px;
}
.logo-title {
  font-size: 40rpx;
}
.logo-desc {
  font-size: 28rpx;
}
.kind-list {
  padding: 30rpx 10rpx;
}
.kind-list-item {
  display: flex;
  height: 292rpx;
  padding: 0 40rpx;
  align-items: center;
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow:0 2px 4px #eeeeee;
}
.kind-list-item-left {
  flex: 1;
}
.kind-list-item-title {
  margin: 10rpx 0 20rpx;
  color: #363636;
}
.kind-list-item-desc {
  padding: 0 0 20rpx;
  color: #999;
}
.kind-list-item-tips {
  color: #787878;
}
.kind-list-item-img {
  height: 60px;
  width: 60px;
}

