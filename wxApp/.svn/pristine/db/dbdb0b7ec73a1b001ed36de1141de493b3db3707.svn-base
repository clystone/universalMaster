@import "../../../common/index.wxss";
.kind-list {
  margin-bottom: 20rpx;
  background-color: #fff;
}
.urgent-info {
  display: flex;
  align-items: center;
}
.kind-list-bd {
  flex: 1;
  font-size: 12px;
  color: #999;
}
.kind-list-bd-bd {
  display: flex;
  align-items: center;
}
.kind-list-bd span{
  font-size: 30px;
  color: #505050;
}
.kind-list-bd .price-input {
  font-size: 40px;
  display: block;
  height: auto;
  color: #505050;
}
.kind-list-ft {
  display: flex;
  align-items: center;
}
.kind-list-ft image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}
.user-info {
  display: flex;
  align-items: center;
  height: 50px;
}
.user-info-hd image {
  width: 50px;
  height: 50px;
  border-radius: 50px;
}
.user-info-hd,.user-info-ft {
  display: flex;
  align-items: center;
}
.user-info-bd {
  flex: 1;
  margin: 0 10px;
  font-size: 14px;
  font-weight: bold;
}
.user-info-time {
  font-size: 12px;
  color: #999;
  font-weight: normal;
}
.user-info-ft button {
  margin: 0;
  padding: 0;
  width: 40px;
  height: 40px;
  border-radius: 20px;
}
.user-info-ft image {
  width: 20px;
  height: 20px;
  border-radius: 10px;
}
.user-info-btn {
  margin: 0;
  font-size: 14px;
  height: 40px;
  width: 110px;
  background-color: #0087FE;
  color: #fff;
  line-height: 40px;
}
.urgent-tip {
  font-size: 12px;
  color: #ccc;
  padding: 0 15px;
}
.order-list {
  height: 0;
  overflow: hidden;
  display: none;
}
.order-list-show {
  height: auto;
  display: block;
  margin: 0 0 10px;
  background-color: #fff;
}
.showBtn {
  background-color: #fff;
}
.order-list-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  font-size: 13px;
}
.order-list-item:last-child {
  margin-bottom: 0;
}
.order-list-hd {
  width: 70px;
}
.order-list-bd {
  color: #787878;
  flex: 1;
}
.order-relate-img {
  width: 65px;
  height: 65px;
  margin-right: 20rpx;
}