/* page/index/pages/demand/demand.wxss */
@import "../../../common/index.wxss";
@import "../../../common/lib/weui.wxss";
.top-background{
  z-index: -1;
  height: 106rpx;
  background-color: #0087FE;
}
.demand-bd{
  position: relative;
  top: -40px;
}
.contact-box {
  z-index: 1;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow:0 2px 4px #eeeeee;
}
.contact-name {
  margin: 10rpx 0 20rpx;
  color: #363636;
  display: flex;
  align-items: center;
}
.contact-img-box {
  display: flex;
  align-items: center;
}
.contact-img-phone{
  width: 16px;
  height: 16px;
  margin: auto;
}
.select-list-item-icon,.contact-img-address{
  width: 16px;
  height: 16px;
  margin: auto 5px auto 0;
}
.contact-img-phone {
  margin: auto 5px auto 10px;
}
.userphone {
  color: #999;
  font-size: 16px;
}
.contact-address {
 display: flex;
}
.contact-desc {
  color: #999;
  flex: 1;
}
.select-list {
  margin: 20rpx 0;
  padding: 10rpx 30rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.select-list-item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #dfdfdf;
}
.select-list-item:last-child{
  border-bottom: 0px;
}
 .select-list-item-title {
  display: flex;
  align-items: center;
} 
.select-list-item-content{
  margin-top: 20rpx;
}
.catalog_items{
  font-size: 30rpx;
  flex-wrap: wrap;
}
.display-flex-row{
  display: flex;
  flex-direction: row;
}
.catalog_items .catalog_item{
  padding: 12rpx 30rpx;
  margin: 0 auto 15rpx;
  width: 20%;
  color: #999;
  text-align: center;
  border-radius: 10rpx;
  border: 1px solid #dfdfdf;
}
.catalog_items .active{
  border:1px solid #0072DB;
  color:#fff !important;
  background-color: #0087FE;
  
}
.item-title-ft {
  color: #999;
  flex: 2;
  text-align: right;
}
.rotate-arrow {
  height: 20px;
  width: 20px;
  float: right;
}
.select-list-item-txtarea {
  height: 0;
  overflow: hidden;
  display: none;
}
.ro {
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.select-list-item-txtarea-show {
  height: auto;
  padding-top: 20rpx;
  display: block;
}
image {
  width: 120rpx;
  height: 120rpx;
}

.page-body-wrapper {
  justify-content: space-between;
  flex-grow: 1;
  margin-bottom: 300rpx;
}
.page-body-time {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.time-big {
  font-size: 17px;
  margin: 10px;
}
.time-small {
  font-size: 30rpx;
}

.page-body-buttons {
  /* margin-top: 60rpx; */
  display: flex;
  justify-content: space-around;
}
.page-body-button {
  width: 250rpx;
  text-align: center;
}
.button-stop-record {
  width: 80rpx;
  height: 80rpx;
  border: 20rpx solid #fff;
  background-color: #f55c23;
  border-radius: 130rpx;
  margin: 0 auto;
}
.weui-uploader__input-box.hide {
  display: none;
}
.img-box-item {
  position: relative;
}
.delete {
    position: absolute;
    height: 24px;
    width: 80px;
    bottom: 0;
    background: #ccc;
    opacity: .7;
    display: flex;
}

.delete image {
    width: 16px;
    height: 16px;
    margin: auto;
}