@import "../common/index.wxss";
@import "../common/lib/weui.wxss";
.navbar {
    display: flex;
    /* border-bottom: 1px solid #0087FE; */
    height: 45px;
    background-color: #0087FE;
    position: fixed;
    top: 0;
    width: 100%;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 15px;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    padding: 8px;
    margin: auto;
    color: #73BCFF;
}
.navbar-text.active {
    border-bottom: 2px solid #fff;
    color: #fff;
}
.hidden {
    display: none;
}
.order-list {
  margin-top: 45px;
}
.order-list-item {
  background-color: #fff;
  padding: 10px 15px 0;
  margin-bottom: 10px;
}
.cancel-box {
  padding: 10px 15px 20px;
}
.order-item-hd {
  margin: 5px 0 15px;
  font-size: 15px;
}
.order-item-hd navigator{
  display: flex;
  align-items: center;
}
.order-img-s {
  width: 25px;
  height:  25px;
  border: 1px solid #999;
  padding: 4px;
  border-radius: 20px;
}
.order-img {
  width: 40px;
  height:  40px;
  border-radius: 20px;
}
.order-user-info {
  margin-left: 20rpx; 
  flex: 2;
}
.order-status {
  color: #dd7e6b;
}
.cancel-status {
  color: #ccc;
}
.kind-list {
  /* padding-bottom: 15px; */
   border-top: 1px solid #eee; 
  /* border-bottom: 1px solid #eee; */
}
.kind-list-item {
  margin-top: 10px;
  display: flex;
  align-items: flex-start;
}
.kind-list-hd {
  height: 24px;
  width: 24px;
  font-weight: bold;
  font-size: 16px;
  display: flex;
  align-items: center;
}
.kind-list-bd {
  color: #787878; 
   flex: 2; 
}
.other-icon {
  width: 18px;
  height: 18px;
}
.service-type {
   color: #505050; 
  font-weight: bold;
}
.total-price {
   color: #505050; 
  font-weight: bold;
}
.order-item-ft {
  /* border-top: 1px solid #eee; */
  padding: 10px 0;
  display: flex;
  justify-content: flex-end;
  height: 40px;
  align-items: center;
}
.tip-ft {
  padding: 20rpx 0;
}
.order-item-btn {
  border: 1px solid #ccc;
  color: #787878;
  text-align: center;
  margin-left: 20rpx;
  display: block;
  width: 30%;
  height: 30px;
  line-height: 30px;
  border-radius: 50px;
}
.order-item-btn navigator {
  border-radius: 50px;
}
.navigator-hover {
  background-color: rgba(66,66,66,.1)
}
.hl-navigator-hover {
  background-color: rgba(0, 135, 254,.1)
}
.main-btn {
  border: 1px solid #0087FE;
  color: #0087FE;
}
.order-item-tips {
  color: #ccc;
}
.kind-list-date {
  font-size: 12px;
  color: #999;
}